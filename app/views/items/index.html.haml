.section.item_search
  .container
    .row
      .col-md-12
        = form_tag items_path, method: :get do
          = text_field_tag :search, params[:search]
          = submit_tag "Search", name: nil
          
    .row
      %table.table.table-striped.table-condensed
        %tr
          %th Title
          %th Author
          %th Manufacturer
          %th ProductGroup
          %th ASIN
          %th SmallImage
        - @items.each do |item|
          %tr
            %td= item.title
            %td= item.author
            %td= item.manufacturer
            %td= item.product_group
            %td= item.asin
            %td= image_tag item.image_url

      = paginate @items
